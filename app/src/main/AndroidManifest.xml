<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sample.solitaire">

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppThemeMain">
        <activity
            android:name=".ui.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.About"
            android:label="@string/about_name"
            android:theme="@style/AppThemeOther" />
        <activity
            android:name=".ui.HighScores"
            android:label="@string/scores_name"
            android:theme="@style/AppThemeOther" />
        <activity
            android:name=".ui.Settings"
            android:theme="@style/AppThemeOther"
            android:label="@string/title_activity_settings"/>
    </application>

</manifest>